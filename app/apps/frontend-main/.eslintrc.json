{
  "extends": [
    "../../.eslintrc",
    "plugin:react-hooks/recommended",
    "plugin:@tanstack/eslint-plugin-query/recommended"
  ],
  "env": {
    "browser": true,
    "es2022": true
  },
  "ignorePatterns": [
    "dist",
    ".eslintrc.json"
  ],
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }]
  }
}
