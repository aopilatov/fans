{
  "name": "@fans/frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && vite build --ssrManifest --outDir dist/client && vite build --ssr src/entry-server.tsx --ssr src/server.ts --outDir dist/server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start:dev": "NODE_ENV=dev node --loader ts-node/esm ./src/server.ts",
    "start:prod": "NODE_ENV=prod node ./dist/server/server"
  },
  "dependencies": {
    "express": "4.18.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sirv": "2.0.4"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react-swc": "3.5.0",
    "autoprefixer": "^10.4.16",
    "compression": "1.7.4",
    "daisyui": "4.4.24",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "postcss": "8.4.32",
    "tailwindcss": "3.4.0",
    "vite": "5.0.8",
    "vite-plugin-pages": "^0.32.0",
    "vite-tsconfig-paths": "4.2.2"
  }
}
